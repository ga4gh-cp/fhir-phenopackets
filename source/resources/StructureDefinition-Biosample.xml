<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Biosample" />
  <version value="0.1.0" />
  <name value="Biosample" />
  <title value="Biosample" />
  <status value="draft" />
  <publisher value="Global Alliance for Genomics and Health" />
  <contact>
    <telecom>
      <system value="other" />
      <value value="http://ga4gh.org" />
      <rank value="1" />
    </telecom>
  </contact>
  <description value="A unit of biological material from which the substrate molecules (e.g. genomic DNA, RNA, proteins) for molecular analyses (e.g. sequencing, array hybridisation, mass-spectrometry) are extracted." />
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Specimen" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Specimen" />
  <derivation value="constraint" />
  <differential>
    <!-- Root node - required for differential. -->
    <element id="Specimen">
      <path value="Specimen" />
    </element>
    
    <!-- Set up slicing -->
    <element id="Specimen.extension">
      <path value="Specimen.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- The slice that contains the age -->
    <element id="Specimen.extension:individualAgeAtCollection">
      <path value="Specimen.extension" />
      <sliceName value="individualAgeAtCollection" />
      <sliceIsConstraining value="false" />
      <label value="individualAgeAtCollection" />
      <short value="Age of the proband at the time the specimen was taken." />
      <definition value="Age of the proband at the time the specimen was taken." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/biosample-individual-age-at-collection" />
      </type>
      <mustSupport value="true" />
    </element>
    
    <!-- The slice that contains the histological diagnosis -->
    <element id="Specimen.extension:histologicalDiagnosis">
      <path value="Specimen.extension" />
      <sliceName value="histologicalDiagnosis" />
      <sliceIsConstraining value="false" />
      <label value="histologicalDiagnosis" />
      <short value="The pathologist’s diagnosis." />
      <definition value="The pathologist’s diagnosis." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/biosample-histological-diagnosis" />
      </type>
      <mustSupport value="true" />
    </element>
    
    <!-- The slice that contains the tumor progression -->
    <element id="Specimen.extension:tumorProgression">
      <path value="Specimen.extension" />
      <sliceName value="tumorProgression" />
      <sliceIsConstraining value="false" />
      <label value="tumorProgression" />
      <short value="This field can be used to indicate if a specimen is from the primary tumor, a metastasis or a recurrence." />
      <definition value="This field can be used to indicate if a specimen is from the primary tumor, a metastasis or a recurrence." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/biosample-tumor-progression" />
      </type>
      <mustSupport value="true" />
    </element>
    
    <!-- The slice that contains the tumor grade -->
    <element id="Specimen.extension:tumorGrade">
      <path value="Specimen.extension" />
      <sliceName value="tumorGrade" />
      <sliceIsConstraining value="false" />
      <label value="tumorGrade" />
      <short value="List of terms representing the tumor grade." />
      <definition value="List of terms representing the tumor grade." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/biosample-tumor-grade" />
      </type>
      <mustSupport value="true" />
    </element>
    
    <!-- The slice that contains the diagnostic markers -->
    <element id="Specimen.extension:diagnosticMarkers">
      <path value="Specimen.extension" />
      <sliceName value="diagnosticMarkers" />
      <sliceIsConstraining value="false" />
      <label value="diagnosticMarkers" />
      <short value="Clinically relevant bio markers." />
      <definition value="Clinically relevant bio markers." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/biosample-diagnostic-markers" />
      </type>
      <mustSupport value="true" />
    </element>
    
    <!-- The slice that contains the reference to the HTS files -->
    <element id="Specimen.extension:htsFiles">
      <path value="Specimen.extension" />
      <sliceName value="htsFiles" />
      <sliceIsConstraining value="false" />
      <label value="htsFiles" />
      <short value="List of high-throughput sequencing files generated as part of a genomic test." />
      <definition value="List of high-throughput sequencing files generated as part of a genomic test." />
      <min value="0" />
      <max value="*" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/htsfiles" />
      </type>
      <mustSupport value="true"/>
    </element>
    
    <!-- The slice that contains the reference to the variants -->
    <element id="Specimen.extension:variants">
      <path value="Specimen.extension" />
      <sliceName value="variants" />
      <sliceIsConstraining value="false" />
      <label value="variants" />
      <short value="This is a field for genetic variants and can be used for listing either candidate variants or diagnosed causative variants." />
      <definition value="This is a field for genetic variants and can be used for listing either candidate variants or diagnosed causative variants. " />
      <min value="0" />
      <max value="*" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/variants" />
      </type>
      <mustSupport value="true"/>
    </element>
    
    <!-- The slice that contains the control flag -->
    <element id="Specimen.extension:isControlSample">
      <path value="Specimen.extension" />
      <sliceName value="isControlSample" />
      <sliceIsConstraining value="false" />
      <label value="isControlSample" />
      <short value="Whether the sample is being used as a normal control." />
      <definition value="Whether the sample is being used as a normal control." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/biosample-control" />
      </type>
      <mustSupport value="true" />
    </element>
    
    <!-- Must support elements. -->
    <element id="Specimen.identifier">
      <path value="Specimen.identifier" />
      <mustSupport value="true" />
    </element>
    <element id="Specimen.subject">
      <path value="Specimen.subject" />
      <mustSupport value="true"/>
    </element>
    <element id="Specimen.note">
      <path value="Specimen.note" />
      <mustSupport value="true"/>
    </element>
    <element id="Specimen.type">
      <path value="Specimen.type" />
      <mustSupport value="true"/>
    </element>
  </differential>
</StructureDefinition>