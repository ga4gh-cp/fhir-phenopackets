<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Family" />
  <version value="0.1.0" />
  <name value="Family" />
  <title value="Family" />
  <status value="draft" />
  <publisher value="Global Alliance for Genomics and Health" />
  <contact>
    <telecom>
      <system value="other" />
      <value value="http://ga4gh.org" />
      <rank value="1" />
    </telecom>
  </contact>
  <description value="Phenotype, sample and pedigree data required for a genomic diagnosis." />
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Group" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Group" />
  <derivation value="constraint" />
  <differential>
    
    <!-- Missing nodes - required for differential. -->
    <element id="Group">
      <path value="Group" />
    </element>
    
    <!--  A family is made of persons. -->
    <element id="Group.type">
      <path value="Group.type" />
      <fixedCode value="person" />
    </element>
    
    <!--  This is an actual group. -->
    <element id="Group.actual">
      <path value="Group.actual" />
      <fixedBoolean value="true" />
    </element>
    
    <!-- Slice Group.extension to include references to HTS files and pedigree -->
    <element id="Group.extension">
      <path value="Group.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- The slice that contains the reference to the HTS files -->
    <element id="Group.extension:htsFiles">
      <path value="Group.extension" />
      <sliceName value="htsFiles" />
      <sliceIsConstraining value="false" />
      <label value="htsFiles" />
      <short value="List of high-throughput sequencing files generated as part of a genomic test." />
      <definition value="List of high-throughput sequencing files generated as part of a genomic test." />
      <min value="0" />
      <max value="*" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/htsfiles" />
      </type>
      <mustSupport value="true"/>
    </element>
    
    <!-- The slice that contains the reference to the pedigree -->
    <element id="Group.extension:pedigreeNode">
      <path value="Group.extension" />
      <sliceName value="pedigreeNode" />
      <sliceIsConstraining value="false" />
      <label value="pedigreeNode" />
      <short value="Describes the family relationships of each specimen along with their gender and phenotype." />
      <definition value="Describes the family relationships of each specimen along with their gender and phenotype." />
      <min value="1" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/pedigree-node" />
      </type>
      <mustSupport value="true"/>
    </element>
    
    <element id="Group.member">
      <path value="Group.member" />
    </element>
    
    <!-- Slice Group.member.extension to include type and reference to Phenopacket -->
    <element id="Group.member.extension">
      <path value="Group.member.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- TODO: Need constraint to ensure there is a single proband and multiple relatives-->
    
    <!-- The slice that contains the type of member -->
    <element id="Group.member.extension:family-member-type">
      <path value="Group.member.extension" />
      <sliceName value="family-member-type" />
      <sliceIsConstraining value="false" />
      <label value="type" />
      <short value="The type of member of this family." />
      <definition value="The type of member of this family." />
      <min value="1" />
      <max value="1" />
      <mustSupport value="true"/>
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/family-member-type" />
      </type>
    </element>
    
    <!-- The slice that contains the reference to the phenopacket that represents this member -->
    <element id="Group.member.extension:family-member-phenopacket">
      <path value="Group.member.extension" />
      <sliceName value="family-member-phenopacket" />
      <sliceIsConstraining value="false" />
      <label value="phenopacket" />
      <short value="A reference to a phenopacket associated to this family member." />
      <definition value="A reference to a phenopacket associated to this family member." />
      <min value="1" />
      <max value="1" />
      <mustSupport value="true"/>
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/family-member-phenopacket" />
      </type>
    </element>
    
  </differential>
</StructureDefinition>