    <element id="Composition.section:variants">
      <path value="Composition.section" />
      <sliceName value="variants" />
      <sliceIsConstraining value="false" />
      <min value="0" />
      <max value="1" />
    </element>
    <element id="Composition.section:variants.title">
      <path value="Composition.section.title" />
      <short value="Variants" />
      <definition value="Variants identified in the proband." />
      <fixedString value="Variants" />
    </element>
    <element id="Composition.section:variants.code">
      <path value="Composition.section.code" />
      <fixedCodeableConcept>
        <coding>
          <system value="http://ga4gh.org/fhir/phenopackets/CodeSystem/section-type" />
